// RSS í”¼ë“œë¥¼ íŒŒì‹±í•˜ëŠ” í•¨ìˆ˜
async function fetchRssFeeds() {
  console.log('ğŸ“° RSS í”¼ë“œ ìˆ˜ì§‘ ì‹œì‘...');
  let allItems = [];
  
  // RSS ì†ŒìŠ¤ë‹¹ ìµœëŒ€ ê¸°ì‚¬ ìˆ˜ ì„¤ì •
  const MAX_ITEMS_PER_SOURCE = 12;
  
  // ì‚¬ìš©ì ì—ì´ì „íŠ¸ ì„¤ì • (ì¼ë¶€ ì‚¬ì´íŠ¸ëŠ” ë´‡ ì°¨ë‹¨)
  const parser = new Parser({
    headers: {
      'User-Agent': 'Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/121.0.0.0 Safari/537.36',
      'Accept': 'application/rss+xml, application/xml, text/xml; q=0.9, */*; q=0.8'
    },
    timeout: 15000, // 15ì´ˆ íƒ€ì„ì•„ì›ƒ
    customFields: {
      item: [
        ['media:content', 'media'],
        ['media:thumbnail', 'thumbnail'],
      ]
    }
  });
  
  // ê° RSS í”¼ë“œ URLì— ëŒ€í•´ ë³‘ë ¬ë¡œ ìš”ì²­ì„ ë³´ë‚´ì§€ë§Œ, ì˜¤ë¥˜ ì²˜ë¦¬ë¥¼ ê°•í™”
  const feedPromises = rssFeedUrls.map(async (url) => {
    try {
      console.log(`ğŸ“¡ RSS í”¼ë“œ ê°€ì ¸ì˜¤ê¸°: ${url}`);
      
      // URL ìœ íš¨ì„± ê²€ì‚¬
      let parsedUrl;
      try {
        parsedUrl = new URL(url);
      } catch (urlError) {
        console.error(`âŒ ì˜ëª»ëœ URL í˜•ì‹: ${url}`);
        return [];
      }
      
      // íƒ€ì„ì•„ì›ƒ ì‹œê°„ì„ 15ì´ˆë¡œ ëŠ˜ë¦¼
      const feedResult = await Promise.race([
        parser.parseURL(url),
        new Promise((_, reject) => 
          setTimeout(() => reject(new Error(`Timeout fetching ${url}`)), 15000)
        )
      ]);
      
      // ê²°ê³¼ í™•ì¸
      if (!feedResult || !feedResult.items || !Array.isArray(feedResult.items)) {
        console.warn(`âš ï¸ ${url}ì—ì„œ ìœ íš¨í•œ í•­ëª©ì„ ì°¾ì„ ìˆ˜ ì—†ìŒ`);
        return [];
      }
      
      // ê° í”¼ë“œì—ì„œ ìµœëŒ€ MAX_ITEMS_PER_SOURCE í•­ëª©ë§Œ ê°€ì ¸ì˜¤ê¸°
      const limitedItems = feedResult.items.slice(0, MAX_ITEMS_PER_SOURCE);
      
      // ê° ì•„ì´í…œì— íŒŒìŠ¤ ì •ë³´ì™€ RSS í”Œë˜ê·¸ ì¶”ê°€ (ì˜¤ë¥˜ ì²˜ë¦¬ ê°•í™”)
      const items = limitedItems.map(item => {
        try {
          // ë‚ ì§œ ì²˜ë¦¬ ê°œì„ 
          let normalizedDate;
          try {
            // ë‹¤ì–‘í•œ ë‚ ì§œ í˜•ì‹ ì²˜ë¦¬ ì‹œë„
            const dateString = item.pubDate || item.isoDate || item.published || item.date;
            if (dateString) {
              const parsedDate = new Date(dateString);
              if (!isNaN(parsedDate.getTime())) {
                normalizedDate = parsedDate.toISOString();
              } else {
                normalizedDate = new Date().toISOString();
              }
            } else {
              normalizedDate = new Date().toISOString();
            }
          } catch (dateError) {
            console.warn(`âš ï¸ ë‚ ì§œ ë³€í™˜ ì˜¤ë¥˜(${url}): ${dateError.message}. í˜„ì¬ ë‚ ì§œë¡œ ëŒ€ì²´`);
            normalizedDate = new Date().toISOString();
          }
          
          // ì œëª©ê³¼ ì„¤ëª… í…ìŠ¤íŠ¸ ì •ë¦¬ (HTML íƒœê·¸ ì œê±° ë° íŠ¹ìˆ˜ ë¬¸ì ì²˜ë¦¬)
          const cleanText = (text) => {
            if (!text) return '';
            // HTML íƒœê·¸ ì œê±°
            const withoutTags = text.replace(/<[^>]*>?/gm, ' ');
            // ì—¬ëŸ¬ ê³µë°± ì œê±°
            return withoutTags.replace(/\s+/g, ' ').trim();
          };
          
          // í•­ëª© ìƒì„±
          return {
            ...item,
            source: feedResult.title || parsedUrl.hostname,
            is_from_rss: true,
            category: (item.categories && item.categories.length > 0) ? item.categories[0] : 'general',
            domain: parsedUrl.hostname,
            url: item.link || url,
            title: cleanText(item.title) || `[ì œëª© ì—†ìŒ] - ${parsedUrl.hostname}`,
            snippet: cleanText(item.contentSnippet || item.summary || item.description) || '',
            description: cleanText(item.contentSnippet || item.summary || item.description) || '',
            published_date: item.pubDate || item.isoDate || new Date().toISOString(),
            normalized_date: normalizedDate,
            // ë©”íƒ€ë°ì´í„°ë„ í¬í•¨
            meta: {
              feedTitle: feedResult.title || '',
              feedDescription: feedResult.description || '',
              feedLink: feedResult.link || url
            }
          };
        } catch (itemError) {
          console.warn(`âš ï¸ í•­ëª© ë³€í™˜ ì˜¤ë¥˜(${url}): ${itemError.message}`);
          return null; // ì˜¤ë¥˜ê°€ ìˆëŠ” í•­ëª©ì€ nullë¡œ í‘œì‹œ
        }
      }).filter(item => item !== null); // null í•­ëª© ì œê±°
      
      console.log(`âœ… ${url}ì—ì„œ ${items.length}ê°œì˜ í•­ëª©ì„ ê°€ì ¸ì™”ìŠµë‹ˆë‹¤ (ì œí•œ: ${MAX_ITEMS_PER_SOURCE}ê°œ)`);
      return items;
    } catch (error) {
      // ì˜¤ë¥˜ ë¡œê¹… ê°œì„ 
      let errorMessage = error.message || 'ì•Œ ìˆ˜ ì—†ëŠ” ì˜¤ë¥˜';
      let statusCode = null;
      
      if (error.response) {
        statusCode = error.response.status;
        errorMessage = `Status code ${error.response.status}`;
      } else if (error.code === 'ENOTFOUND') {
        errorMessage = `DNS í™•ì¸ ì˜¤ë¥˜: ${error.hostname || url}`;
      } else if (error.message.includes('timeout')) {
        errorMessage = `ìš”ì²­ íƒ€ì„ì•„ì›ƒ (15ì´ˆ ì´ˆê³¼)`;
      }
      
      console.error(`âŒ RSS í”¼ë“œ ${url} íŒŒì‹± ì˜¤ë¥˜: ${errorMessage}`);
      
      // ì¬ì‹œë„ ë¡œì§ (ì„ íƒì ) - ë‚˜ì¤‘ì— êµ¬í˜„í•  ê²½ìš°ë¥¼ ìœ„í•œ ì£¼ì„
      // if (retryCount < MAX_RETRIES && shouldRetry(statusCode, errorMessage)) {
      //   console.log(`ğŸ”„ RSS í”¼ë“œ ${url} ì¬ì‹œë„ ì¤‘... (${retryCount + 1}/${MAX_RETRIES})`);
      //   return fetchRssFeed(url, retryCount + 1);
      // }
      
      return []; // ì˜¤ë¥˜ ë°œìƒ ì‹œ ë¹ˆ ë°°ì—´ ë°˜í™˜
    }
  });
  
  try {
    // Promise.allSettledë¥¼ ì‚¬ìš©í•´ ì¼ë¶€ ì‹¤íŒ¨í•´ë„ ì§„í–‰ ê°€ëŠ¥
    const results = await Promise.allSettled(feedPromises);
    let successCount = 0;
    let failCount = 0;
    
    results.forEach((result, index) => {
      if (result.status === 'fulfilled') {
        allItems = [...allItems, ...result.value];
        if (result.value.length > 0) {
          successCount++;
        } else {
          // ì„±ê³µí–ˆì§€ë§Œ í•­ëª©ì´ ì—†ëŠ” ê²½ìš°
          console.warn(`âš ï¸ RSS í”¼ë“œ ${rssFeedUrls[index]}ì—ì„œ í•­ëª©ì„ ê°€ì ¸ì™”ìœ¼ë‚˜ ìœ íš¨í•œ í•­ëª©ì´ ì—†ìŠµë‹ˆë‹¤`);
        }
      } else {
        failCount++;
        console.error(`âŒ RSS í”¼ë“œ ì²˜ë¦¬ ì‹¤íŒ¨: ${rssFeedUrls[index]} - ${result.reason}`);
      }
    });
    
    console.log(`ğŸ“Š RSS í”¼ë“œ ì²˜ë¦¬ ê²°ê³¼: ì„±ê³µ ${successCount}ê°œ, ì‹¤íŒ¨ ${failCount}ê°œ`);
    
    // ì¤‘ë³µ ì œê±° (URL ê¸°ì¤€)
    const uniqueUrls = new Set();
    const uniqueItems = allItems.filter(item => {
      if (!item.url) return false;
      if (uniqueUrls.has(item.url)) return false;
      uniqueUrls.add(item.url);
      return true;
    });
    
    console.log(`ğŸ“Š ì¤‘ë³µ ì œê±° í›„ ê³ ìœ  í•­ëª© ìˆ˜: ${uniqueItems.length}ê°œ (ì¤‘ë³µ ${allItems.length - uniqueItems.length}ê°œ ì œê±°)`);
    
    // ë¹ˆ ê²°ê³¼ì¸ ê²½ìš° ì²˜ë¦¬
    if (uniqueItems.length === 0) {
      console.warn('âš ï¸ ëª¨ë“  RSS í”¼ë“œì—ì„œ í•­ëª©ì„ ê°€ì ¸ì˜¤ì§€ ëª»í–ˆìŠµë‹ˆë‹¤.');
      return [];
    }
    
    // ìµœì‹  í•­ëª© ìš°ì„  ì •ë ¬ (ì˜¤ë¥˜ ë°©ì§€ë¥¼ ìœ„í•œ ì•ˆì „í•œ ì •ë ¬)
    uniqueItems.sort((a, b) => {
      try {
        const dateA = a.normalized_date ? new Date(a.normalized_date) : new Date(0);
        const dateB = b.normalized_date ? new Date(b.normalized_date) : new Date(0);
        
        // ë‚ ì§œê°€ ìœ íš¨í•˜ì§€ ì•Šì€ ê²½ìš° ë¹„êµ ì•ˆí•¨
        if (isNaN(dateA.getTime())) return 1;  // ë¬´íš¨í•œ ë‚ ì§œëŠ” ë’¤ë¡œ
        if (isNaN(dateB.getTime())) return -1; // ë¬´íš¨í•œ ë‚ ì§œëŠ” ë’¤ë¡œ
        
        return dateB - dateA; // ìµœì‹ ìˆœ ì •ë ¬
      } catch (sortError) {
        console.warn(`âš ï¸ ë‚ ì§œ ì •ë ¬ ì˜¤ë¥˜: ${sortError.message}`);
        return 0;
      }
    });
    
    // ìµœê·¼ Nì¼ ì´ë‚´ ê¸°ì‚¬ ìˆ˜ ì¹´ìš´íŠ¸
    const recentDays = 2;
    const recentDate = new Date();
    recentDate.setDate(recentDate.getDate() - recentDays);
    
    const recentItems = uniqueItems.filter(item => {
      try {
        const itemDate = new Date(item.normalized_date);
        return !isNaN(itemDate.getTime()) && itemDate >= recentDate;
      } catch (e) {
        return false;
      }
    });
    
    console.log(`ğŸ“Š ì´ ${uniqueItems.length}ê°œì˜ RSS í”¼ë“œ í•­ëª©ì„ ê°€ì ¸ì™”ìŠµë‹ˆë‹¤`);
    console.log(`ğŸ“Š ìµœê·¼ ${recentDays}ì¼ ì´ë‚´ ê¸°ì‚¬ ìˆ˜: ${recentItems.length}ê°œ`);
    console.log(`ğŸ“Š ìµœì‹  ê¸°ì‚¬ ë¹„ìœ¨: ${((recentItems.length / uniqueItems.length) * 100).toFixed(2)}%`);
    
    return uniqueItems;
  } catch (error) {
    console.error('âŒ RSS í”¼ë“œ ì²˜ë¦¬ ì¤‘ ì˜¤ë¥˜:', error);
    return [];
  }
}

